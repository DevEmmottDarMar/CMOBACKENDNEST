# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# URL de conexión a PostgreSQL (Railway proporcionará esta variable)
DATABASE_URL=postgresql://username:password@host:port/database

# ========================================
# CONFIGURACIÓN JWT
# ========================================
# Clave secreta para firmar tokens JWT (cambiar en producción)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# ========================================
# CONFIGURACIÓN AWS S3
# ========================================
# Credenciales de AWS para subida de imágenes
AWS_ACCESS_KEY_ID=tu_access_key_id
AWS_SECRET_ACCESS_KEY=tu_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=tu-bucket-name

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
# Puerto del servidor (Railway asignará automáticamente)
PORT=3000

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================
# URLs permitidas para CORS (agregar tu dominio de frontend)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
# Entorno de ejecución
NODE_ENV=production
